@using FlywayAirlines
@model List<User>

<caption>List of Users</caption>



<hr />

<table class="table  table-bordered table-striped table table-dark table-hover">

    <thead>
    <tr>
        <th>Id</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>View</th>
        <th>Edit</th>
        <th>Delete</th>

    </tr>
    </thead>
    <tbody>
    @foreach (User user in Model)
    {
        <tr>
            <td> @user.getId() </td>
            <td> @user.getFirstName() </td>
            <td> @user.getLastName() </td>
            <td> @user.getEmail() </td>
            <td> <a asp-controller="User" asp-action="Details" asp-route-id="@user.getId()">Details</a> </td>
            <td> <a asp-controller="User" asp-action="Edit" asp-route-id="@user.getId()">Edit</a> </td>
            <td> <a asp-controller="User" asp-action="Delete" asp-route-id="@user.getId()">Delete</a> </td>
        </tr>
    }
    </tbody>
</table>
<p><a asp-area="" asp-controller="User" asp-action="Create">Add new User</a></p>

<p><a asp-area="" asp-controller="User" asp-action="Admin">Back to Admin Dashboard</a></p>
<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 25%"></div>
</div>