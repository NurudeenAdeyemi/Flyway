@using FlywayAirlines
@model Booking

<caption>Update Booking</caption>
<hr />
<div class="row">
    <div class="col-md-5">


        <form method="POST">
            <input type="hidden" name="id" value="@Model.getId()" />

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="control-label">Booking Number</label>
                    <input class="form-control" name="bookingNumber" value="@Model.getBookingNumber()" type="number" />
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Booking Date</label>
                    <input class="form-control" name="bookingDate" value="@Model.getBookingDate()" type="date" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="control-label">Booking Type</label>
                    <input class="form-control" name="bookingType" value="@Model.getBookingType()" type="text" />
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Seat Number</label>
                    <input class="form-control" name="seatNumber" value="@Model.getSeatNumber()" type="number" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="control-label">Flight Id</label>
                    <input class="form-control" name="flightid" value="@Model.getFlightid()" type="number" />
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
<p><a asp-area="" asp-controller="Booking" asp-action="Display">Back to Booking List</a></p>
