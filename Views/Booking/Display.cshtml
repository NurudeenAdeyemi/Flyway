@using FlywayAirlines
@model List<Booking>

<caption>List of Bookings</caption>



<hr />

<table class="table  table-bordered table-striped table table-dark table-hover">

    <thead>
        <tr>
            <th>Id</th>
            <th>Booking Number</th>
            <th>Booking Date</th>
            <th>Booking Type</th>
            <th>Seat Number</th>
            <th>Flight ID</th>
            <th>Passenger ID</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Booking booking in Model)
        {
        <tr>
            <td> @booking.getId() </td>
            <td> @booking.getBookingNumber() </td>
            <td> @booking.getBookingDate().ToLongDateString() </td>
            <td> @booking.getBookingType() </td>
            <td> @booking.getSeatNumber() </td>
            <td> @booking.getFlightid() </td>
            <td> @booking.getPassengerid() </td>
            <td> <a asp-action="Details" asp-route-bookingNumber="@booking.getBookingNumber()">Details</a> </td>
            <td> <a href="/booking/Edit/@booking.getId()">Edit</a> </td>
            <td> <a href="/booking/Delete/@booking.getId()">Delete</a> </td>
        </tr>
        }
    </tbody>
</table>
<p><a asp-area="" asp-controller="Booking" asp-action="Create">Add new Booking</a></p>

<p><a asp-area="" asp-controller="User" asp-action="Admin">Back to Admin Dashboard</a></p>
<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 25%"></div>
</div>




