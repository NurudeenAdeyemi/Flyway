@using FlywayAirlines
@model List<Flight>

<caption>List of Flights</caption>



<hr />

<table class="table  table-bordered table-striped table table-dark table-hover">

    <thead>
        <tr>
            <th>Id</th>
            <th>Flight Number</th>
            <th>From</th>
            <th>Destination</th>
            <th>Flight Time</th>
            <th>Landing Time</th>
            <th>Flight Price</th>
            <th>Aircraft ID</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Flight flight in Model)
        {
        <tr>
            <td> @flight.getId() </td>
            <td> @flight.getFlightNumber() </td>
            <td> @flight.getTakeOfPoint() </td>
            <td> @flight.getDestination() </td>
            <td> @flight.getTakeOfTime() </td>
            <td> @flight.getLandingTime() </td>
            <td> @flight.getFlightPrice() </td>
            <td> @flight.getAircraftid() </td>
            <td> <a href="/flight/Details/@flight.getId()">Details</a> </td>
            <td> <a href="/flight/Edit/@flight.getId()">Edit</a> </td>
            <td> <a href="/flight/Delete/@flight.getId()">Delete</a> </td>
        </tr>
        }
    </tbody>
</table>
<p><a asp-area="" asp-controller="Flight" asp-action="Create">Add new Flight</a></p>

<p><a asp-area="" asp-controller="User" asp-action="Admin">Back to Admin Dashboard</a></p>
<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 25%"></div>
</div>




